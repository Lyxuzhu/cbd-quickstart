{
    "ClusterName": "{{$CLUSTER_NAME}}",
    "HDPVersion": "2.6",
    "ClusterType": {{$CLUSTER_TYPE}},
    "Master": {
        "InstanceType": "m4.4xlarge",
        "VolumeType": "gp2",
        "VolumeSize": 32,
        "VolumeCount": 1,
        "Encrypted": false
    },
    "Worker": {
        "InstanceType": "c3.2xlarge",
        "VolumeType": "ephemeral",
        "VolumeSize": 80,
        "VolumeCount": 2,
        "Encrypted": false,
        "InstanceCount": 3,
        "RecoveryMode": "AUTO"
    },
    "Compute": {
        "InstanceType": "c3.2xlarge",
        "VolumeType": "ephemeral",
        "VolumeSize": 80,
        "VolumeCount": 2,
        "Encrypted": false,
        "InstanceCount": 0,
        "RecoveryMode": "AUTO"
    },
    "SSHKeyName": "{{$SSHKEY}}",
    "RemoteAccess": "0.0.0.0/0",
    "WebAccess": true,
    "HiveJDBCAccess": true,
    "ClusterComponentAccess": true,
    "ClusterAndAmbariUser": "admin",
    "ClusterAndAmbariPassword": "admin",
    "Tags": {},
    "SharedClusterName": "{{$DATALAKE_CLUSTER}}",
    "Autoscaling": {
        "Configurations": {
            "CooldownTime": 30,
            "ClusterMinSize": 3,
            "ClusterMaxSize": 100
        }
    },
    "InstanceRole": "CREATE",
    "Network": {
        "VpcId": "{{$CLUSTER_VPCID}}",
        "SubnetId": "{{$CLUSTER_SUBNETID}}"
    }
}
